<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AsthmaApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.PageTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">"sans-serif-black"</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.ToolbarTitle" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">"sans-serif-black"</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Button" parent="ThemeOverlay.Material3.Button">
        <item name="android:background">@color/button_color</item>
        <item name="fontFamily">sans-serif-black</item>
    </style>

    <style name="Theme.TextTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/main_theme_color</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="Theme.Description" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:padding">2dp</item>
    </style>

</resources>